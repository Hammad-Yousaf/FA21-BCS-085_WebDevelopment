<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/backgrond image.jpg');
            background-size: cover;
            z-index: -1;
        }

        .navbar {
            background-color: #ffffffe0;
        }

        .car-list-container {
            position: relative;
            padding-top: 100px;
        }

        .header-section {
            background-size: cover;
            background-position: center;
            padding: 50px 0;
        }

        .car-card {
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
            background-color: #ffffff;
            border: 1px solid rgb(255, 255, 255);
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease-in-out;
            position: relative;
            cursor: pointer;
        }

        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 16px rgba(9, 116, 146, 0.2);
        }

        .car-card:hover::after {
            content: "Click for more details";
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 1rem;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 2.25rem;
            color: #000000;
        }

        .card-text {
            color: #000000;
        }

        .text-center {
            color: rgb(0, 0, 0);
            text-decoration: underline;
        }

        .card-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .btn-warning,
        .btn-danger {
            color: #fff;
            background-color: #347f56;
            font-size: 1.3rem;
        }

        .pagination-nav {
            display: flex;
            justify-content: center;
        }

        .page-link {
            color: #007bff;
        }

        .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }

        .page-link:hover {
            color: #0056b3;
        }

        .mb-3 {
            margin-bottom: 1rem !important;
            width: 228px;
            background-color: #347f56;
        }

        .image-container {
            text-align: center;
            margin-bottom: 15px;
        }

        .car-image {
            width: 100%;
            height: auto;
            max-width: 400px;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <div class="car-list-container container">
        <div class="inner">
            <div class="header-section">
                <h1 class="text-center">
                    <%= pageTitle %>
                </h1>
            </div>
            <% if (isAdmin) { %>
                <a href="/form" class="btn btn-primary mb-3">Add New Car</a>
                <% } %>
                    <p>Page: <%= page %> Records: <%= total %>
                    </p>

                    <div class="row">
                        <% cars.forEach(car=> { %>
                            <div class="col-md-6 mb-4">
                                <div class="car-card" onclick="location.href='/cars/details/<%= car._id %>';">

                                    <div class="image-container">
                                        <img src="<%= car.images[0]?.url %>" alt="<%= car.images[0]?.description %>"
                                            class="car-image">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= car.make %>
                                                <%= car.model %>
                                        </h5>
                                        <p class="card-text">Price: $<%= car.price %>
                                        </p>

                                        <div class="card-actions">
                                            <% if (isAdmin) { %>

                                                <a href="/cars/<%= car._id %>/edit" class="btn btn-warning">Edit</a>
                                                <a href="/cars/<%= car._id %>/delete" class="btn btn-danger">Delete</a>
                                                <% } %>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>

                    <nav class="pagination-nav mt-4" aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% for(let index=1; index <=totalPages; index++) { %>
                                <li class="page-item <%= index === page ? 'active' : '' %>">
                                    <a class="page-link" href="/cars/<%= index %>">
                                        <%= index %>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </nav>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>