<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    body{
        background-image: url('/img/listpage.png');
        background-size: contain;
    }
    .navbar{
        background-color: #d7dbe0e0;
    }
    .car-list-container {
        position: relative;
        padding-top: 100px; 
    }

    .header-section {
        background-size: cover;
        background-position: center;
        padding: 50px 0;
    }

    .car-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fef8ed;
        border: 1px solid black;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
    }

    .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 16px rgba(0,0,0,0.2);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 2.25rem;
        color: #333;
        font-style: italic;
    }

    .card-text {
        color: #666;
    }
    .text-center{
        color: rgb(0, 0, 0);
    }

    .description {
        height: 80px; /* Fixed height with overflow control */
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
    }

    .btn-warning, .btn-danger {
        color: #fff;
        background-color: #347f56;
        font-size: 1.3rem;
    }

    .pagination-nav {
        display: flex;
        justify-content: center;
    }

    .page-link {
        color: #007bff;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }

    .page-link:hover {
        color: #0056b3;
    }
    .mb-3 {
        margin-bottom: 1rem !important;
        width: 228px;
        background-color: #347f56;
    }
</style>

<body>
    <div class="car-list-container container">
        <div class="inner">
            <div class="header-section">
                <h1 class="text-center"><%= pageTitle %></h1>
            </div>
            <a href="/cars/new" class="btn btn-primary mb-3">Add New Car</a>
            <p>Page: <%= page %> Records: <%= total %></p>

            <div class="row">
                <% cars.forEach(car => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="car-card">
                            <div class="card-body">
                                <h5 class="card-title"><%= car.make %> <%= car.model %></h5>
                                <p class="card-text">Year: <%= car.year %></p>
                                <p class="card-text">Price: $<%= car.price %></p>
                                <p class="card-text">Color: <%= car.color %></p>
                                <p class="card-text description">Description: <%= car.description %></p>
                                <% if (car.images.length > 0) { %>
                                    <p class="card-text">Image URL: <%= car.images[0].url %></p>
                                    <p class="card-text">Image Description: <%= car.images[0].description %></p>
                                <% } %>
                                <div class="card-actions">
                                    <a href="/cars/<%= car._id %>/edit" class="btn btn-warning">Edit</a>
                                    <a href="/cars/<%= car._id %>/delete" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <nav class="pagination-nav mt-4" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% for(let index = 1; index <= totalPages; index++) { %>
                        <li class="page-item"><a class="page-link" href="/cars/page/<%= index %>"><%= index %></a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</body>
</html>
