<body id="carFormBody">
    <div id="headingContainer">
        <h2 id="carInfoTitle">Sign-up</h2>
    </div>
    <form class="custom-form signup-form clearfix" action="/signup" method="POST">
        <div class="form-group">
            <label for="signup-username" class="form-label">Username:</label>
            <input type="text" name="username" id="signup-username" class="form-input" required>
        </div>
        <div class="form-group">
            <label for="signup-email" class="form-label">Email:</label>
            <input type="email" name="email" id="signup-email" class="form-input" required>
        </div>
        <div class="form-group">
            <label for="signup-password" class="form-label">Password:</label>
            <input type="password" name="password" id="signup-password" class="form-input" required>
        </div>
        <button style="float:left" type="submit" id="uniqueSubmitButton" class="form-button">Sign Up</button>
        <p style="float: right; margin-top: 33px; color: white;">
            <a style="color: white;" href="/login">Already have an account!</a>
        </p>
    </form>
</body>
